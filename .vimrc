filetype plugin on
syntax enable

set nocompatible
set syntax=on
set filetype=on
set showmatch
set showmode
set showcmd
set ignorecase
set smartcase
set nowrap
set autoindent
set nosmartindent
set shiftwidth=4
set tabstop=4
set noerrorbells
set visualbell
set wildmenu
set wildmode=longest,full
set scrolloff=2
